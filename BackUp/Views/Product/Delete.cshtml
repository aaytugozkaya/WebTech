@model BackUp.Models.Product

@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Delete" enctype="multipart/form-data" class="p-3">
    <input asp-for="ID" hidden />
    <div class="border p-3 t-4">
        <div class="row pb-2">
            <h2 class="text-primary mt-3">Delete Product</h2>
            <hr />
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Title"></label>
            <input asp-for="Title" class="form-control" rows="3"></input>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="row">
            <div class="mb-3 col-6">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>
    </div>
    <button type="submit" onclick="return ValidateInput()" class="btn btn-danger" style="width:150px">Deiete</button>
    <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back to List
    </a>
    </div>

    </div>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}