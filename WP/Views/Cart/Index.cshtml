@model WP.Models.CartVM
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row mt-5">
        <div class="col-lg-12 d-flex" style="display:flex;justify-content:flex-start;">
            <h3>
                Alışveriş Sepeti
            </h3>
        </div>
    </div>
    <hr />
    @{
        foreach (var item in Model.ListCarts)
        {
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-lg-9">
                        <div class="row">
                            <div class="col-lg-3">
                                <div class="row">
                                    @*<img src=@item.Product.Image />*@
                                </div>
                            </div>
                            <div class="col-lg-5 mt-4">
                                <div class="row mt-4">
                                    <h6>@item.Product.Title</h6>
                                </div>
                                <div class="row">
                                    <div class="col-lg-8" style="font-weight:100;">
                                        Category : @item.Product.Category
                                    </div>
                                    <div class="col-lg-7">
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-lg-5" style="color: #ff9117;">
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>
                                        <i class="bi bi-star-fill"></i>

                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-2 mt-4">
                                <div class="row mt-3" style="color: #5624d0;">
                                    Kaldır
                                </div>
                                <div class="row mt-2" style="color: #5624d0;">
                                    Sonraya sakla
                                </div>
                                <div class="row mt-2" style="color: #5624d0;">
                                    İstek Listesine taşı
                                </div>
                            </div>
                            <div class="col-lg-2 mt-5" style="color: #ac45f1;">
                                $@item.Product.Price <i class="bi bi-bookmark-fill"></i>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="row">
                            <h5 style="color:gray;font-weight:bold;">
                                Toplam : 
                            </h5>
                        </div>
                        <div class="row mt-2">
                            <h1>
                                $3600,359
                            </h1>
                        </div>
                        <div class="row mt-2">
                            <button class="btn" style="background-color: #a435f0; color: white; width: 100%;height:50px;">Ödeme Bilgileri</button>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    

    


</div>


