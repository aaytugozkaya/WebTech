@model WP.Models.ShoppingCart

@{
    ViewData["Title"] = "Product Detail Page";
}


<div class="container mt-5">
    <div class="row" style="">
        <div class="col-6">
            <div class="card" style="height:">
                <img class="card-img-top" src="@Model.Product.Image" alt="Card image cap">
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <h3>
                    @Model.Product.Title
                </h3>
            </div>
            <div class="row" style="margin-top:20px;">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="star-st">
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                    </div>
                    <h5>
                        123 Review
                    </h5>
                </div>
            </div>
            <div class="row" style="margin-top:20px;">
                <span style="font-weight:bold;font-size:32px;">
                    $@Model.Product.Price
                </span>
            </div>
            <div class="mt-3">
                <span style="font-weight:100">
                    @Model.Product.Description
                </span>
            </div>
            <div class="row mt-5">
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5" style="font-weight:bold;">
                                    Category
                                </div>
                                <div class="col-2">
                                    :
                                </div>
                                <div class="col-5">
                                    @Model.Product.Category.CategoryName
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5" style="font-weight:bold;">
                                    Color
                                </div>
                                <div class="col-2">
                                    :
                                </div>
                                <div class="col-5">
                                    @Model.Product.Color
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5" style="font-weight:bold;">
                                    Brand
                                </div>
                                <div class="col-2">
                                    :
                                </div>
                                <div class="col-5">
                                    @Model.Product.Brand
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <form method="post">
                <input hidden asp-for="ProductId" />
                <div class="row mt-5">
                    <div class="col-6">
                        <input class="form-control" type="number" asp-for="Count" />
                    </div>
                    <button class="btn" style="background-color: #ff9117;margin-top:20px;">Add to Cart</button>
                </div>
            </form>

        </div>
    </div>

</div>


