@model WP.Models.Product
@inject ILanguageService language

@{
    ViewData["Title"] = "ChoosenProduct";
}

<h1><center>ChoosenProduct</center></h1>

<div class="container mt-5">
    <div class="row" style="">
        <div class="col-6" style="padding-right:10px">
            <div class="card" style="height:">
                <img class="card-img-top" src="@Model.Image" alt="Card image cap">
            </div>
        </div>
        <div class="col-6">
            <div class="row">
                <h3>
                    @Model.Title
                </h3>
            </div>
            <div class="row" style="margin-top:20px;">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="star-st">
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star-fill"></i>
                        <i class="bi bi-star"></i>
                    </div>
                </div>
            </div>
            <div class="row" style="margin-top:20px;">
                <span style="font-weight:bold;font-size:32px;">
                    $@Model.Price
                </span>
            </div>
            <div class="mt-3">
                <span style="font-weight:100">
                    @Model.Description
                </span>
            </div>

                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5" style="font-weight:bold;">
                                    @language.Getkey("Color")
                                </div>
                                <div class="col-2">
                                    :
                                </div>
                                <div class="col-5">
                                    @Model.Color
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <div class="row">
                                <div class="col-5" style="font-weight:bold;">
                                    @language.Getkey("Brand")
                                </div>
                                <div class="col-2">
                                    :
                                </div>
                                <div class="col-5">
                                    @Model.Brand
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
